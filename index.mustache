        <script type="text/javascript">
            $(function() {
                // Redirections for old URLs
                if (window.location.hash.length > 0 && window.location.hash.match(/^#\/([0-9]+\/)+/)) {
                    var hash = window.location.hash.replace(/^#\//, '').replace(/\/$/, '').split('/');
                    if (hash.length > 0) {
                        var link = $('article a[rel="' + hash[0] + '"]');
                        if (link != null) {
                            var url = link.attr('href')
                            if (hash.length > 1) { url += '#/' + hash[1] + '/'; }
                            window.location.href = url;
                        }
                    }
                }
            });
        </script>

        <style type="text/css">
            body {
                background-color: {{ colors.bottom }};
                background-image: linear-gradient({{ colors.top }}, {{ colors.bottom }});
            }

            main {
                background-color: {{ colors.cartel }};
            }
        </style>
